#!/bin/bash
TEXTRESET=$(tput sgr0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
USER=$(whoami)

# Temporary files
TMP_FILE=$(mktemp)
OUTPUT=$(mktemp)
trap 'rm -f "$TMP_FILE" "$OUTPUT"' EXIT

# --- Check root permissions ---
if [ "$USER" != "root" ]; then
    echo "${RED}This program must be run as root${TEXTRESET}"
    exit 1
fi

# --- Fetch Groups ---
samba-tool group list > "$TMP_FILE"
if [ ! -s "$TMP_FILE" ]; then
    dialog --msgbox "No groups found in Active Directory." 7 50
    exit 0
fi

# --- Select a group ---
CHOICES=()
while IFS= read -r group; do
    CHOICES+=("$group" "")
done < "$TMP_FILE"

GROUP=$(dialog --clear --title "Select AD Group" \
    --menu "Select the group to remove users from (ESC to cancel):" 20 70 15 \
    "${CHOICES[@]}" \
    3>&1 1>&2 2>&3)

[ $? -ne 0 ] && exit 0

# --- Fetch users in selected group ---
samba-tool group listmembers "$GROUP" > "$TMP_FILE"
if [ ! -s "$TMP_FILE" ]; then
    dialog --msgbox "Group '$GROUP' has no members." 7 50
    exit 0
fi

# --- Build user checklist ---
CHECKLIST=()
while IFS= read -r user; do
    CHECKLIST+=("$user" "" off)
done < "$TMP_FILE"

USERS=$(dialog --clear --title "Select Users" \
    --checklist "Select users to remove from '$GROUP':" 20 70 15 \
    "${CHECKLIST[@]}" \
    3>&1 1>&2 2>&3)

[ $? -ne 0 ] && exit 0

# --- Format user selection ---
USERS_LIST=$(echo "$USERS" | tr -d '"')  # Remove quotes

if [ -z "$USERS_LIST" ]; then
    dialog --msgbox "No users selected. Exiting." 6 40
    exit 0
fi

# --- Confirm removal ---
dialog --yesno "You are about to remove the following user(s) from '$GROUP':\n\n$USERS_LIST\n\nProceed?" 12 70
if [ $? -ne 0 ]; then
    dialog --msgbox "Operation canceled." 6 40
    exit 0
fi

# --- Remove users from group ---
for u in $USERS_LIST; do
    samba-tool group removemembers "$GROUP" "$u"
done

# --- Show updated membership ---
echo "Group Members Updated:" > "$OUTPUT"
samba-tool group listmembers "$GROUP" >> "$OUTPUT"

for u in $USERS_LIST; do
    echo "" >> "$OUTPUT"
    echo "User '$u' Memberships:" >> "$OUTPUT"
    samba-tool user show "$u" | grep memberOf: >> "$OUTPUT"
done

dialog --title "Update Complete" --textbox "$OUTPUT" 25 80
