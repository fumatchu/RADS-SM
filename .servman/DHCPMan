
#!/bin/bash
user=$(whoami)
#Checking for user permissions
if [ "$user" != "root" ]; then
echo ${red}"This program must be run as root ${textreset}"
echo "Exiting"
exit
else
echo "Running Program"
fi

items=(1 "Create new DHCP Scope"
       2 "List DHCP Leases"
       3 "Start DHCP Server"
       4 "Stop DHCP Server"
       5 "Restart DHCP Service"
       6 "Enable DHCP Server Service"
       7 "Disable DHCP Service"
       8 "DHCP Server Status"
       9 "Edit DHCP Config Manually"
)

while choice=$(dialog --title "$TITLE" \
		 --backtitle "DHCP Server Management" \
                 --menu "Please select" 20 40 3 "${items[@]}" \
                 2>&1 >/dev/tty)
    do
    case $choice in
        1) /root/.servman/DHCPManager/DHCPcreatescope;;
        2) /root/.servman/DHCPManager/DHCPlist;;
        3) /root/.servman/DHCPManager/DHCPstart;;
        4) /root/.servman/DHCPManager/DHCPstop;;
	5) /root/.servman/DHCPManager/DHCPrestart;;
	6) /root/.servman/DHCPManager/DHCPenable;;
	7) /root/.servman/DHCPManager/DHCPdisable;;
	8) /root/.servman/DHCPManager/DHCPstatus;;
        9) /root/.servman/DHCPManager/DHCPeditconfig;;
    esac
done
clear # clear after user pressed Cancel
